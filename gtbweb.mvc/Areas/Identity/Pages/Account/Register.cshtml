@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<section class="paralax-mf footer-paralax bg-image sect-mt4 route" style="background-image: url(/img/overlay-bg.jpg)">
<div class="overlay-mf"></div>
    <div class="container">
        <div class="row">
        <div class="col-sm-12">
          <div class="contact-mf">
            <div id="contact" class="box-shadow-full">
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All " class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.About"></label>
                <input asp-for="Input.About" class="form-control" />
                <span asp-validation-for="Input.About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Image"></label>
                <input asp-for="Input.Image" class="form-control" />
                <span asp-validation-for="Input.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Designation"></label>
                <input asp-for="Input.Designation" class="form-control" />
                <span asp-validation-for="Input.Designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.RegistrationDate"></label>
                <input asp-for="Input.RegistrationDate" class="form-control" />
                <span asp-validation-for="Input.RegistrationDate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
 </div>
</div>
 </div>
</div>
 </div>
</div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
